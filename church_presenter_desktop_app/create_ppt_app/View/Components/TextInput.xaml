<UserControl x:Class="create_ppt_app.View.Components.TextInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:create_ppt_app.View.Components"
             mc:Ignorable="d" 
             Name="root"
             d:DesignHeight="25" d:DesignWidth="100">

    <TextBox x:Name="Input" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"
                    Text="{Binding Text, ElementName=root, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
             LostFocus="LostFocus"/>

</UserControl>
